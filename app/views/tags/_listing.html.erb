<%= turbo_frame_tag 'tags' do %>  
  <div id="tags">
  <% if @tags.empty? %>
    No Tags found
  <% else %>
    <table class="table text-center">
      <thead class="table-group-divider">
        <tr>
          <th>Name</th>
          <td>Edit</td>
          <td>Delete</td>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @tags.each do |tag| %>
          <tr class="tag_tbody_tr">
            <td class="tag_tbody_td">
              <%= tag.name %>
            </td>
            <td class="tag_tbody_td">
              <%= link_to edit_tag_path(tag), data: { turbo_frame: "_top" }, aria: { label: "#{dom_id(tag)}_edit" } do%>
              <i class="bi bi-pencil-square text-primary"></i>
              <% end %>
            </td>
            <td class="tag_tbody_td">
              <%= link_to tag_path(tag), data: { turbo_confirm: 'Are you sure you want to delete this tag?', turbo_method: :delete}, aria: { label: "#{dom_id(tag)}_delete" }  do %>
              <i class="bi bi-trash-fill text-danger"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  </div>
<% end %>
