<%= turbo_frame_tag 'new_tag' do %>  
  <%= form_with(model: tag, data: { controller: "autosubmit", autosubmit_target: "form" }) do |form| %>
    <% if tag.errors.any? %>
      <div class="text-danger">
        <h2><%= t('forms.errors.header', count: tag.errors.count) %></h2>
        <ul>
          <% tag.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :name, t('forms.labels.create_tag'), class: "nowrap" %>
      <div class="d-flex flex-row justify-content-start align-items-center gap-3">
        <%= form.text_field :name, placeholder: t('forms.placeholders.name'), class: "w-25" %>
        <%= form.collection_select :tag_type_id, @tag_types, :id, :name, 
            { prompt: t('forms.labels.select_tag_type'), include_blank: true }, 
            { class: "form-select w-25" } %>
        <%= form.submit t('forms.buttons.create') %>
      </div>
    </div>
  <% end %>
<% end %>
