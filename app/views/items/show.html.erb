<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <!-- Item Image/File Display -->
      <div class="card mb-4">
        <div class="card-body">
          <% if @item.file.attached? %>
            <% if @item.item_type_photo? %>
              <%= image_tag @item.file, class: "img-fluid rounded", alt: "Item image", style: "max-height: 600px; width: auto;" %>
            <% elsif @item.item_type_video? %>
              <video controls class="img-fluid rounded" style="max-height: 600px; width: auto;">
                <source src="<%= url_for(@item.file) %>" type="<%= @item.file.content_type %>">
                <%= t('views.items.show.video_not_supported') %>
              </video>
            <% elsif @item.item_type_document? %>
              <div class="text-center p-4">
                <i class="fas fa-file-alt fa-5x text-muted mb-3"></i>
                <h5><%= t('views.items.show.document') %></h5>
                <p class="text-muted">
                  <%= @item.file.filename %>
                  (<%= number_to_human_size(@item.file.byte_size) %>)
                </p>
                <%= link_to t('views.items.show.download'), @item.file, class: "btn btn-primary", download: true %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center p-5">
              <i class="fas fa-image fa-5x text-muted mb-3"></i>
              <p class="text-muted"><%= t('views.items.show.no_file_attached') %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Item Details -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i><%= t('views.items.show.item_details') %>
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong><%= t('views.items.show.type') %></strong>
            <span class="badge bg-secondary ms-2">
              <%= @item.item_type.humanize %>
            </span>
          </div>

          <% if @item.caption.present? %>
            <div class="mb-3">
              <strong><%= t('views.items.show.caption') %></strong>
              <br>
              <p class="mb-0"><%= @item.caption %></p>
            </div>
          <% end %>
          
          <div class="mb-3">
            <strong><%= t('views.items.show.created') %></strong>
            <br>
            <small class="text-muted">
              <%= @item.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </small>
          </div>

          <% if @item.file.attached? %>
            <div class="mb-3">
              <strong><%= t('views.items.show.file') %></strong>
              <br>
              <small class="text-muted">
                <%= @item.file.filename %><br>
                <%= number_to_human_size(@item.file.byte_size) %>
              </small>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Tags Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-tags me-2"></i><%= t('views.items.show.tags') %>
          </h5>
        </div>
        <div class="card-body">
          <% if @item.tags.any? %>
            <div class="d-flex flex-wrap gap-2">
              <% @item.tags.each do |tag| %>
                <%= link_to tag.name, items_path(tags: [tag.id]), 
                    class: "badge bg-primary text-decoration-none", 
                    style: "font-size: 0.85em; padding: 0.5em 0.75em;" %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">
              <i class="fas fa-tag me-1"></i><%= t('views.items.show.no_tags_assigned') %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <!-- Action Buttons -->
      <div class="d-grid gap-2 mb-4">
        <%= link_to edit_item_path(@item), class: "btn btn-warning" do %>
          <i class="fas fa-edit me-2"></i><%= t('forms.buttons.edit') %>
        <% end %>
        
        <%= link_to item_path(@item), 
            class: "btn btn-danger", 
            data: { 
              turbo_confirm: t('views.items.show.delete_confirmation'),
              turbo_method: :delete
            } do %>
          <i class="fas fa-trash me-2"></i><%= t('forms.buttons.delete') %>
        <% end %>
        
        <%= link_to items_path, class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left me-2"></i><%= t('forms.buttons.back_to_items') %>
        <% end %>
      </div>

      <!-- Tag Assignment Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-plus-circle me-2"></i>Assign Tags
          </h5>
        </div>
        <div class="card-body">
          <%= form_tag assign_tags_item_path(@item), method: :patch do %>
            <% @assignment_tags_by_type ||= Tag.joins(:tag_type).includes(:tag_type)
                                               .group_by(&:tag_type)
                                               .transform_keys(&:name)
                                               .sort %>
            <% if @assignment_tags_by_type.any? %>
              <% @assignment_tags_by_type.each do |tag_type_name, tags| %>
                <div class="mb-3">
                  <h6 class="text-muted"><%= tag_type_name %></h6>
                  <% if tag_type_name&.downcase == 'year' %>
                    <!-- Year tags as dropdown -->
                    <div class="mb-2">
                      <%= select_tag "tag_ids[]", 
                          options_from_collection_for_select(tags, :id, :name), 
                          { prompt: t('forms.labels.select_year'), multiple: true, class: "form-select", style: "width: 100%; max-width: 300px;" } %>
                    </div>
                  <% else %>
                    <!-- All other tag types as dropdown -->
                    <div class="mb-2">
                      <%= select_tag "tag_ids[]", 
                          options_from_collection_for_select(tags, :id, :name), 
                          { prompt: "#{t('forms.labels.select')} #{tag_type_name}", multiple: true, class: "form-select", style: "width: 100%; max-width: 300px;" } %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <div class="mt-3">
                <%= submit_tag "Assign Selected Tags", class: "btn btn-success" %>
              </div>
            <% else %>
              <p class="text-muted"><%= t('forms.messages.no_tags_found') %></p>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Tag Removal Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-minus-circle me-2"></i>Remove Tags
          </h5>
        </div>
        <div class="card-body">
          <% if @item.tags.any? %>
            <%= form_tag remove_tags_item_path(@item), method: :patch do %>
              <div class="mb-3">
                <h6 class="text-muted">Current Tags</h6>
                <div class="mb-2">
                  <%= select_tag "tag_ids[]", 
                      options_from_collection_for_select(@item.tags, :id, :name), 
                      { prompt: "Select tags to remove", multiple: true, class: "form-select", style: "width: 100%; max-width: 300px;" } %>
                </div>
              </div>
              <div class="mt-3">
                <%= submit_tag "Remove Selected Tags", class: "btn btn-danger" %>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No tags to remove.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
