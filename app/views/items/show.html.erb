<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <!-- Item Image/File Display -->
      <div class="card mb-4">
        <div class="card-body">
          <% if @item.file.attached? %>
            <% if @item.item_type_photo? %>
              <%= image_tag @item.file, class: "img-fluid rounded", alt: "Item image", style: "max-height: 600px; width: auto;" %>
            <% elsif @item.item_type_video? %>
              <video controls class="img-fluid rounded" style="max-height: 600px; width: auto;">
                <source src="<%= url_for(@item.file) %>" type="<%= @item.file.content_type %>">
                Your browser does not support the video tag.
              </video>
            <% elsif @item.item_type_document? %>
              <div class="text-center p-4">
                <i class="fas fa-file-alt fa-5x text-muted mb-3"></i>
                <h5>Document</h5>
                <p class="text-muted">
                  <%= @item.file.filename %>
                  (<%= number_to_human_size(@item.file.byte_size) %>)
                </p>
                <%= link_to "Download", @item.file, class: "btn btn-primary", download: true %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center p-5">
              <i class="fas fa-image fa-5x text-muted mb-3"></i>
              <p class="text-muted">No file attached</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <!-- Item Details -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Item Details
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Type:</strong>
            <span class="badge bg-secondary ms-2">
              <%= @item.item_type.humanize %>
            </span>
          </div>

          <% if @item.caption.present? %>
            <div class="mb-3">
              <strong>Caption:</strong>
              <br>
              <p class="mb-0"><%= @item.caption %></p>
            </div>
          <% end %>
          
          <div class="mb-3">
            <strong>Created:</strong>
            <br>
            <small class="text-muted">
              <%= @item.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </small>
          </div>

          <% if @item.file.attached? %>
            <div class="mb-3">
              <strong>File:</strong>
              <br>
              <small class="text-muted">
                <%= @item.file.filename %><br>
                <%= number_to_human_size(@item.file.byte_size) %>
              </small>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Tags Section -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-tags me-2"></i>Tags
          </h5>
        </div>
        <div class="card-body">
          <% if @item.tags.any? %>
            <div class="d-flex flex-wrap gap-2">
              <% @item.tags.each do |tag| %>
                <%= link_to tag.name, items_path(tags: [tag.id]), 
                    class: "badge bg-primary text-decoration-none", 
                    style: "font-size: 0.85em; padding: 0.5em 0.75em;" %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">
              <i class="fas fa-tag me-1"></i>No tags assigned
            </p>
          <% end %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-cog me-2"></i>Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to edit_item_path(@item), class: "btn btn-warning" do %>
              <i class="fas fa-edit me-2"></i>Edit Item
            <% end %>
            
            <%= link_to item_path(@item), method: :delete, 
                class: "btn btn-danger", 
                data: { 
                  confirm: "Are you sure you want to delete this item? This action cannot be undone.",
                  turbo_method: :delete
                } do %>
              <i class="fas fa-trash me-2"></i>Delete Item
            <% end %>
            
            <%= link_to items_path, class: "btn btn-secondary" do %>
              <i class="fas fa-arrow-left me-2"></i>Back to Items
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
