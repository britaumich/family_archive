<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">
            <i class="fas fa-tags me-2"></i>Edit Tags
          </h3>
        </div>
        <div class="card-body">
          <%= form_with model: @item, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
            
            <!-- Error Messages -->
            <% if @item.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @item.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Current File Display -->
            <% if @item.file.attached? %>
              <div class="mb-4">
                <label class="form-label"><strong>Item Preview:</strong></label>
                <div class="border rounded p-3 bg-light">
                  <% if @item.item_type_photo? %>
                    <%= image_tag @item.file, class: "img-thumbnail", style: "max-height: 150px; max-width: 200px;" %>
                  <% elsif @item.item_type_video? %>
                    <video class="img-thumbnail" style="max-height: 150px; max-width: 200px;">
                      <source src="<%= url_for(@item.file) %>" type="<%= @item.file.content_type %>">
                    </video>
                  <% else %>
                    <div class="text-center p-3">
                      <i class="fas fa-file-alt fa-2x text-muted mb-2"></i>
                      <br>
                      <small class="text-muted">
                        <%= @item.file.filename %>
                      </small>
                    </div>
                  <% end %>
                  <div class="mt-2">
                    <small class="text-muted">
                      Type: <%= @item.item_type.humanize %>
                    </small>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Caption Field -->
            <div class="mb-4">
              <div class="mb-3">
                <%= form.label :caption, class: "form-label" %>
                <%= form.text_area :caption, rows: 3, class: "form-control", placeholder: "Add a caption to describe this item..." %>
                <div class="form-text">
                  <i class="fas fa-info-circle me-1"></i>
                  Optional caption to describe or provide context for this item.
                </div>
              </div>
            </div>

            <!-- Tags Selection -->
            <div class="mb-4">
              <label class="form-label"><strong>Tags</strong></label>
              <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                <% if @tags.any? %>
                  <div class="row">
                    <% @tags.each do |tag| %>
                      <div class="col-md-6 col-lg-4 mb-2">
                        <div class="form-check">
                          <%= check_box_tag 'tag_ids[]', tag.id, @item.tags.include?(tag), 
                              id: "tag_#{tag.id}", class: "form-check-input" %>
                          <%= label_tag "tag_#{tag.id}", tag.name, class: "form-check-label" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-muted mb-0">
                    <i class="fas fa-tag me-1"></i>No tags available. 
                    <%= link_to "Create some tags first", tags_path, class: "text-decoration-none" %>.
                  </p>
                <% end %>
              </div>
              <div class="form-text">
                <i class="fas fa-info-circle me-1"></i>
                Select tags that describe this item.
              </div>
            </div>

            <!-- Form Actions -->
            <div class="d-flex gap-2 justify-content-between">
              <div>
                <%= link_to @item, class: "btn btn-secondary" do %>
                  <i class="fas fa-times me-2"></i>Cancel
                <% end %>
              </div>
              
              <div class="d-flex gap-2">
                <%= form.submit "Update Tags", class: "btn btn-success" do %>
                  <i class="fas fa-save me-2"></i>Update Tags
                <% end %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>